<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="cn.a218.newproject">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.INSTALL_PACKAGES" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/wifi"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity android:name=".activitys.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activitys.MainActivity"
            android:label="@string/app_name" />

        <meta-data
            android:name="design_width"
            android:value="1080" />
        <meta-data
            android:name="design_height"
            android:value="1920" />

        <activity
            android:name=".activitys.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity android:name=".activitys.DancesSearchActivity" />
        <activity android:name=".activitys.HotActivity" />
        <activity android:name=".activitys.SortActivity" />
        <activity android:name=".activitys.DancesActivity" />
        <activity android:name=".activitys.MasterActivity" />
        <activity android:name=".activitys.NewestActivity" />
        <activity
            android:name=".activitys.VideoPlayActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".activitys.SortItemActivity" />
        <activity android:name=".activitys.PersonNalActivity" />
        <activity android:name=".activitys.MyWorkSpaceActivity" />
        <activity android:name=".activitys.DraftsActivity" />
        <activity android:name=".activitys.MyDanceTeamActivity" />
        <activity android:name=".activitys.MyCollectionActivity" />
        <activity android:name=".activitys.WatchHistoryActivity" />
        <activity android:name=".activitys.SoftwareSettingActivity" />
        <activity android:name=".activitys.TeamCreateActivity" />
        <activity android:name=".activitys.ShowDancingActivity" />
        <activity android:name=".activitys.LocalUploadActivity" />
        <activity android:name=".activitys.NearbyTeamActivity" />
        <activity android:name=".activitys.MoreHotListActivity" />
        <activity android:name=".activitys.MasterDancesActivity" />
        <activity android:name=".activitys.RegisterActivity" />
        <activity android:name=".activitys.WuquDancesActivity" />
        <activity
            android:name=".activitys.FullScreenPlayActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden"></activity>

        <service
            android:name=".musicPlay.MusicService"
            android:exported="true" />

    </application>

</manifest>