<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <include
        android:id="@+id/layout_titlebar"
        layout="@layout/title_bar_complex" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_titlebar">

        <ImageView
            android:id="@+id/NOdATA"
            android:layout_width="400px"
            android:layout_height="400px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="400px"
            android:background="@mipmap/a2" />

        <TextView
            android:id="@+id/noText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/NOdATA"
            android:layout_margin="30px"
            android:gravity="center"
            android:text="本地没有视频哦"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="32px" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="100px"
            android:layout_below="@+id/noText"
            android:layout_centerHorizontal="true"
            android:background="@drawable/home_search_top"
            android:paddingLeft="90px"
            android:paddingRight="90px"
            android:text="拍一个试试看"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="30px" />

    </RelativeLayout>
</RelativeLayout>
