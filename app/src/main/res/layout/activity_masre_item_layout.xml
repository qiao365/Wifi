<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/mImageView"
        android:layout_width="140px"
        android:layout_height="140px"
        android:layout_centerVertical="true"
        android:layout_marginBottom="30px"
        android:layout_marginLeft="35px"
        android:layout_marginTop="30px"
        android:background="@mipmap/icon_tangxd" />

    <TextView
        android:id="@+id/mName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/mImageView"
        android:layout_marginLeft="30px"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/mImageView"
        android:text="动动广场舞"
        android:textSize="40px" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mName"
        android:layout_alignTop="@+id/mName"
        android:layout_marginLeft="40px"
        android:layout_toRightOf="@+id/mName"
        android:background="@mipmap/icon_register_data" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mImageView"
        android:layout_alignStart="@+id/mName"
        android:text="你的私人健身教练"
        android:textColor="@android:color/darker_gray"
        android:textSize="30px" />

    <ImageView
        android:layout_width="25px"
        android:layout_height="30px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="60px"
        android:background="@mipmap/icon_item_more" />
</RelativeLayout>