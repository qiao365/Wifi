<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include layout="@layout/title_bar_complex" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="30px"
                android:background="@color/colorlightbackground" />

            <RelativeLayout
                android:id="@+id/mLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/mTextView_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="52px"
                    android:layout_marginTop="48px"
                    android:text="手机绑定"
                    android:textSize="48px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mTextView_tel"
                    android:layout_marginBottom="20px"
                    android:layout_marginLeft="52px"
                    android:layout_marginRight="60px"
                    android:layout_marginTop="20px"
                    android:text="绑定后可支持手机号登录"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="30px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="20px"
                    android:layout_marginRight="60px"
                    android:layout_toLeftOf="@+id/rightIm"
                    android:text="未绑定" />

                <ImageView
                    android:id="@+id/rightIm"
                    android:layout_width="25px"
                    android:layout_height="30px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="60px"
                    android:background="@mipmap/icon_item_more" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="30px"
                android:background="@color/colorlightbackground" />

            <RelativeLayout
                android:id="@+id/mLayout3"
                android:layout_width="match_parent"
                android:layout_height="142px"
                android:onClick="onClick">

                <TextView
                    android:id="@+id/mTextView_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="52px"
                    android:layout_marginTop="48px"
                    android:layout_toRightOf="@+id/mImageView_about"
                    android:text="黑名单"
                    android:textSize="48px" />

                <ImageView
                    android:id="@+id/mTextView_Name"
                    android:layout_width="25px"
                    android:layout_height="30px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="60px"
                    android:background="@mipmap/icon_item_more" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="30px"
                android:background="@color/colorlightbackground" />

            <RelativeLayout
                android:id="@+id/mLayout4"
                android:layout_width="match_parent"
                android:layout_height="142px"
                android:onClick="onClick">

                <TextView
                    android:id="@+id/mTvOrganization"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="52px"
                    android:layout_marginStart="15dp"
                    android:text="糖币充值"
                    android:textSize="48px" />

                <ImageView
                    android:id="@+id/mTextView_QM"
                    android:layout_width="25px"
                    android:layout_height="30px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="60px"
                    android:background="@mipmap/icon_item_more" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="30px"
                android:background="@color/colorlightbackground" />

            <RelativeLayout
                android:id="@+id/mLayout41"
                android:layout_width="match_parent"
                android:layout_height="142px"
                android:onClick="onClick">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="52px"
                    android:layout_marginStart="15dp"
                    android:text="消息推送"
                    android:textSize="48px" />

                <cn.a218.newproject.views.SwitchView
                    android:id="@+id/SwitchView1"
                    android:layout_width="160px"
                    android:layout_height="50px"
                    android:layout_marginRight="60px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="60px"
                android:background="@color/colorlightbackground" />

            <RelativeLayout
                android:id="@+id/mLayout6"
                android:layout_width="match_parent"
                android:layout_height="142px"
                android:onClick="onClick">

                <TextView
                    android:id="@+id/mTvHistory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="52px"
                    android:layout_marginTop="48px"
                    android:layout_toRightOf="@+id/mIvHistory"
                    android:text="拍摄背景"
                    android:textSize="48px" />

                <cn.a218.newproject.views.SwitchView
                    android:id="@+id/SwitchView2"
                    android:layout_width="160px"
                    android:layout_height="50px"
                    android:layout_marginRight="60px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="60px"
                android:background="@color/colorlightbackground" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="142px"
                android:onClick="onClick">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="52px"
                    android:layout_marginTop="48px"
                    android:layout_toRightOf="@+id/mIvHistory"
                    android:text="录制外音"
                    android:textSize="48px" />

                <cn.a218.newproject.views.SwitchView
                    android:id="@+id/SwitchView3"
                    android:layout_width="160px"
                    android:layout_height="50px"
                    android:layout_marginRight="60px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="60px"
                android:background="@color/colorlightbackground" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="142px"
                android:onClick="onClick">

                <TextView
                    android:id="@+id/mTextView_UPDATA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="52px"
                    android:layout_marginTop="48px"
                    android:text="软件升级"
                    android:textSize="48px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="52px"
                    android:layout_marginRight="20px"
                    android:layout_marginTop="48px"
                    android:layout_toLeftOf="@+id/mImageViewUPDATA"
                    android:text="当前版本：1.0"
                    android:textSize="48px" />

                <ImageView
                    android:id="@+id/mImageViewUPDATA"
                    android:layout_width="25px"
                    android:layout_height="30px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="60px"
                    android:background="@mipmap/icon_item_more" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="60px"
                android:background="@color/colorlightbackground" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/TextView_HC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="52px"
                    android:layout_marginTop="48px"
                    android:text="清理缓存"
                    android:textSize="48px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/TextView_HC"
                    android:layout_marginBottom="20px"
                    android:layout_marginLeft="52px"
                    android:layout_marginRight="60px"
                    android:layout_marginTop="20px"
                    android:text="不影响已下载视频"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="30px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="60px"
                    android:text="1.82MB" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="30px"
                android:background="@color/colorlightbackground" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="142px"
                android:onClick="onClick">

                <TextView
                    android:id="@+id/mTextView_XZLJ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="52px"
                    android:layout_marginTop="48px"
                    android:text="下载路径"
                    android:textSize="48px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="52px"
                    android:layout_marginRight="20px"
                    android:layout_marginTop="48px"
                    android:layout_toLeftOf="@+id/mImageView_XZLJ"
                    android:text="手机存储"
                    android:textSize="48px" />

                <ImageView
                    android:id="@+id/mImageView_XZLJ"
                    android:layout_width="25px"
                    android:layout_height="30px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="60px"
                    android:background="@mipmap/icon_item_more" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="30px"
                android:background="@color/colorlightbackground" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="142px"
                android:onClick="onClick">

                <TextView
                    android:id="@+id/mTextView_Help"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="52px"
                    android:layout_marginTop="48px"
                    android:text="使用帮助"
                    android:textSize="48px" />

                <ImageView
                    android:layout_width="25px"
                    android:layout_height="30px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="60px"
                    android:background="@mipmap/icon_item_more" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="30px"
                android:background="@color/colorlightbackground" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="142px"
                android:onClick="onClick">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="52px"
                    android:layout_marginTop="48px"
                    android:text="推荐此软件给我的朋友"
                    android:textSize="48px" />

                <ImageView
                    android:layout_width="25px"
                    android:layout_height="30px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="60px"
                    android:background="@mipmap/icon_item_more" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="30px"
                android:background="@color/colorlightbackground" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="142px"
                android:onClick="onClick">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="52px"
                    android:layout_marginTop="48px"
                    android:text="给个好评"
                    android:textSize="48px" />

                <ImageView
                    android:layout_width="25px"
                    android:layout_height="30px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="60px"
                    android:background="@mipmap/icon_item_more" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorlightbackground"
                android:paddingBottom="100px"
                android:paddingTop="200px">

                <Button
                    android:id="@+id/btnBack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100px"
                    android:layout_marginRight="100px"
                    android:background="@android:color/holo_blue_bright"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:text="退出"
                    android:textColor="@android:color/white" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
