<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <TextView
        android:id="@+id/mData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20px"
        android:text="5月15日"
        android:textColor="@android:color/darker_gray"
        android:textSize="40px" />

    <ImageView
        android:id="@+id/mImageView"
        android:layout_width="300px"
        android:layout_height="200px"
        android:layout_below="@+id/mData"
        android:layout_marginBottom="30px"
        android:layout_marginLeft="35px"
        android:layout_marginTop="30px"
        android:background="@mipmap/tab_page" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mImageView"
        android:layout_alignTop="@+id/mImageView"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_toRightOf="@+id/mImageView"
        android:text="青儿广场舞《今夜的你又在和谁约会》原创单人水兵舞"
        android:textSize="38px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mImageView"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30px"
        android:text="删除" />
</RelativeLayout>