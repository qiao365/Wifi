<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgv"
        android:layout_width="250px"
        android:layout_height="220px"
        android:layout_margin="35px"
        android:scaleType="fitXY"
        android:src="@mipmap/zuni"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv"
        android:layout_marginTop="30px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25px"
        android:layout_marginBottom="10px"
        android:layout_toRightOf="@+id/imgv"
        android:text="荷塘月色舞队"
        android:textSize="45px" />

    <TextView
        android:id="@+id/video_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv"
        android:layout_marginBottom="10px"
        android:layout_marginLeft="25px"
        android:layout_toRightOf="@+id/imgv"
        android:text="领队："
        android:textColor="@android:color/darker_gray"
        android:textSize="35px" />

    <TextView
        android:id="@+id/leaderNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv"
        android:layout_marginBottom="10px"
        android:layout_marginLeft="25px"
        android:layout_toRightOf="@+id/video_size"
        android:text="四叶草7675"
        android:textSize="35px" />

    <TextView
        android:id="@+id/peoplenumTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10px"
        android:layout_marginLeft="25px"
        android:layout_toRightOf="@+id/imgv"
        android:layout_below="@+id/video_size"
        android:text="人数："
        android:textColor="@android:color/darker_gray"
        android:textSize="35px" />
    <TextView
        android:id="@+id/mTextViewNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10px"
        android:layout_marginLeft="25px"
        android:layout_toRightOf="@+id/peoplenumTextView"
        android:layout_below="@+id/video_size"
        android:text="3"
        android:textColor="@android:color/darker_gray"
        android:textSize="35px" />
    <TextView
        android:id="@+id/fieldTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10px"
        android:layout_marginLeft="25px"
        android:layout_toRightOf="@+id/imgv"
        android:layout_below="@+id/peoplenumTextView"
        android:text="场地："
        android:textColor="@android:color/darker_gray"
        android:textSize="35px" />
    <TextView
        android:id="@+id/mTextViewField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10px"
        android:layout_marginLeft="25px"
        android:layout_toRightOf="@+id/fieldTextView"
        android:layout_below="@+id/peoplenumTextView"
        android:text="人民广场"
        android:textColor="@android:color/darker_gray"
        android:textSize="35px" />
    <TextView
        android:id="@+id/video_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imgv"
        android:layout_marginRight="15dp"
        android:text="133米"
        android:padding="5dp"
        android:textSize="15sp" />

</RelativeLayout>
